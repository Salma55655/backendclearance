{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Language/Environment */
    "target": "ES2020",        // Modern JS
    "module": "CommonJS",      // Node.js module system
    "lib": ["ES2020"],         // Standard library
    "types": ["node"],         // Type definitions for Node.js

    /* Debugging/Build Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Module Behavior */
    "esModuleInterop": true,   // Import commonjs correctly
    "skipLibCheck": true       // Skip checking @types packages
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}


